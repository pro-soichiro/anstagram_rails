<%= form_with model: form_user, url: user_profile_path do |form| %>
  <div>
    <%= form.label :last_name %><span style="color: red">*</span>
    <%= form.text_field :last_name %>
    <%= render "shared/error_messages", resource: form_user, attribute: :last_name %>
  </div>
  <div>
    <%= form.label :first_name %><span style="color: red">*</span>
    <%= form.text_field :first_name %>
    <%= render "shared/error_messages", resource: form_user, attribute: :first_name %>
  </div>
  <div>
    <%= form.label :last_name_kana %><span style="color: red">*</span>
    <%= form.text_field :last_name_kana %>
    <%= render "shared/error_messages", resource: form_user, attribute: :last_name_kana %>
  </div>
  <div>
    <%= form.label :first_name_kana %><span style="color: red">*</span>
    <%= form.text_field :first_name_kana %>
    <%= render "shared/error_messages", resource: form_user, attribute: :first_name_kana %>
  </div>
  <div>
    <%= form.label :joined_on %>
    <%= form.date_field :joined_on, value: form_user.joined_on %>
  </div>
  <div>
    <%= form.label :born_on %>
    <%= form.date_field :born_on, value: form_user.born_on %>
  </div>
  <div>
    <%= form.label :prefecture_id %>
    <%= form.collection_select :prefecture_id, Prefecture.all, :id, :name,
                                                   { include_blank: '未選択'} %>
    <%= render "shared/error_messages", resource: form_user, attribute: :prefecture_id %>
  </div>
  <div>
    <%= form.label :birthplace_detail %>
    <%= form.text_area :birthplace_detail %>
  </div>
  <div>
    <%= form.label :departments %>
    <%= form.collection_check_boxes :departments, Department.all, :id, :name %>
  </div>
  <div>
    <%= form.label :nickname %>
    <%= form.text_field :nickname %>
  </div>
  <div>
    <%= form.label :special_skill %>
    <%= form.text_field :special_skill %>
  </div>
  <div>
    <%= form.label :pastime %>
    <%= form.text_field :pastime %>
  </div>
  <div>
    <%= form.label :motto %>
    <%= form.text_field :motto %>
    <%= form.text_area :motto_description %>
  </div>
  <div>
    <%= form.label :career %>
    <%= form.text_area :career %>
  </div>
  <div>
    <%= form.label :self_introduction %>
    <%= form.text_area :self_introduction %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>