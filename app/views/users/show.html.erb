<h1>User</h1>
<p><%= @user.last_name %></p>
<p><%= @user.first_name %></p>

<ul>
  <li>
    <%= link_to "Users", users_path %>
  </li>
  <li>
    <%= link_to "Edit User", edit_user_path(@user) %>
  </li>
  <li>
    <%= link_to "Delete User", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
    } %>
  </li>
</ul>